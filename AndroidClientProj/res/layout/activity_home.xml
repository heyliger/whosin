<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/button_Home_Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out" />

    <Button
        android:id="@+id/button_home_CreateNewEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Event" />

    <Button
        android:id="@+id/button_Home_CreateGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Group" />
    
	<Button
        android:id="@+id/button_Home_GetUsersForGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Users For Group" />
	
	<Button
        android:id="@+id/button_Home_GetGroupsForUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Groups For User" />

	<Button
	    android:id="@+id/button_home_AllEventsForUser"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="All My Events" />
	
</LinearLayout>
