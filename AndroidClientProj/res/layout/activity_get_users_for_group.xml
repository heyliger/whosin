<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView_Get_Users_For_Group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Find Users By Group"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView_Get_Users_For_Group_User_Group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Group:" />

    <EditText
        android:id="@+id/editText_Get_Users_For_Group_Group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10">
        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button_Get_Users_For_Group_Return_Users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:onClick="ReturnUsersForGroup"/>
    
    <ListView
        android:id="@+id/button_Get_Users_For_Group_Users_List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
         />

</LinearLayout>
